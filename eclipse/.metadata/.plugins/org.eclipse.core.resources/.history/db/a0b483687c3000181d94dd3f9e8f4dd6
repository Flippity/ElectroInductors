package com.flippity.ei.common.blocks.base.machines;

import com.flippity.ei.ElectroInductors;
import com.flippity.ei.client.gui.GuiHandler;
import com.flippity.ei.client.gui.Tabs;
import com.flippity.ei.common.blocks.BlockRegistry;
import com.flippity.ei.common.constants.GeneratorConstants;
import com.flippity.ei.common.tiles.base.TileBlock;
import com.flippity.ei.common.tiles.base.machines.TileWindTurbine;

import cpw.mods.fml.common.network.internal.FMLNetworkHandler;
import net.minecraft.block.Block;
import net.minecraft.block.material.Material;
import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.init.Blocks;
import net.minecraft.tileentity.TileEntity;
import net.minecraft.world.IBlockAccess;
import net.minecraft.world.World;

public class BlockWindTurbine extends TileBlock //Class for the windTurbine block. The block is turned into a tileEntity when placed
{
	public BlockWindTurbine(int generated, int buffer)
	{
		super(Material.iron, null);
		this.setCreativeTab(Tabs.tabBase);
	}
	
	public int getRenderType()
	{
		return -1;
	}
	
	public boolean isOpaqueCube()
	{
		return false;
	}
	
	public boolean renderAsNormalBlock()
	{
		return false;
	}

	public TileEntity createNewTileEntity(World var1, int var2) //Replaces the block with its tileEntity counterpart
	{
		return new TileWindTurbine(GeneratorConstants.TURBINE_GENERATED, GeneratorConstants.TURBINE_BUFFER);
	}
	
	public void breakBlock(World world, int x, int y, int z, Block block, int metadata)
	{
		if (world.getBlock(x, y+1, z) == BlockRegistry.blockWindTurbine) world.setBlockToAir(x, y+1, z);
		if (world.getBlock(x, y-1, z) == BlockRegistry.blockWindTurbine) world.setBlockToAir(x, y-1, z);
	}
	
	public void setBlockBoundsBasedOnState(IBlockAccess world, int x, int y, int z)
	{
		float pixel = 1F/16F;
		
		if(world.getBlockMetadata(x, y, z) < 7) this.setBlockBounds(pixel*4, 0, pixel*4, 1-pixel*4, 1, 1-pixel*4);
		else this.setBlockBounds(0, 0, 0, 1, 1, 1);
	}
	
	public boolean onBlockActivated(World world, int x, int y, int z, EntityPlayer player, int side, float hitX, float hitY, float hitZ)
	{	
		if(!world.isRemote)
		{
			FMLNetworkHandler.openGui(player, ElectroInductors.instance, GuiHandler.GUIID_GENERATOR_BASIC, world, x, y, z);
			return true;
		}
		return false;
	}
}