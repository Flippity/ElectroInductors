package com.flippity.ei.common.items.atomic;

import java.util.List;

import com.flippity.ei.common.blocks.BlockRegistry;
import com.flippity.ei.reference.Reference;

import net.minecraft.block.Block;
import net.minecraft.client.gui.GuiScreen;
import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.item.ItemBlock;
import net.minecraft.item.ItemStack;
import net.minecraft.util.EnumChatFormatting;

public class ItemBlockElectromagnet extends ItemBlock{

	public ItemBlockElectromagnet(Block block) {
		super(block);
	}

	boolean keyShiftDown;
	boolean keyCTRlDown;
	
	
	@Override
	public void addInformation(ItemStack itemStack, EntityPlayer player, List list, boolean par3) {
		
		if(GuiScreen.isShiftKeyDown()) {
			keyShiftDown = true;
		}else if(GuiScreen.isShiftKeyDown() == false){
			keyShiftDown = false;
		}
		
		if(GuiScreen.isCtrlKeyDown()) {
			keyCTRlDown = true;
		}else {
			keyCTRlDown = false;
		}
		
	    if(GuiScreen.isShiftKeyDown()){
	    	
        	list.add(EnumChatFormatting.RED + "Electromagnets can be used to move particles" + EnumChatFormatting.RESET);
        	list.add(EnumChatFormatting.RED + "and trap plasma." + EnumChatFormatting.RESET);
        	if(this.equals(this.getItemFromBlock(BlockRegistry.blockElectromagnet))) {
        		list.add(EnumChatFormatting.DARK_RED + "This electromagnet can boil water" + EnumChatFormatting.RESET);
        	}else {
        		list.add(EnumChatFormatting.DARK_RED + "This electromagnet can not boil water" + EnumChatFormatting.RESET);
        	}
	    }else if (GuiScreen.isShiftKeyDown() == false && GuiScreen.isCtrlKeyDown() == false){
	        list.add(EnumChatFormatting.WHITE + "Press" + EnumChatFormatting.RESET + EnumChatFormatting.GREEN + " SHIFT " + EnumChatFormatting.RESET + EnumChatFormatting.WHITE + "for description");
	        list.add(EnumChatFormatting.WHITE + "Press" + EnumChatFormatting.RESET + EnumChatFormatting.AQUA + " CONTROL " + EnumChatFormatting.RESET + EnumChatFormatting.WHITE + "for description");
	    }else if (GuiScreen.isCtrlKeyDown()) {
	        if(GuiScreen.isCtrlKeyDown()) {
            	if(this.equals(this.getItemFromBlock(BlockRegistry.blockElectromagnet))) {
    	        	list.add(EnumChatFormatting.AQUA + "CRAFTING");
                	list.add(EnumChatFormatting.LIGHT_PURPLE + "3" + EnumChatFormatting.RESET + "x" + EnumChatFormatting.YELLOW + "Bronze Ingot");
                	list.add(EnumChatFormatting.LIGHT_PURPLE + "6" + EnumChatFormatting.RESET + "x" + EnumChatFormatting.YELLOW + "Steel Plate");
            	}else {
    	        	list.add(EnumChatFormatting.AQUA + "CRAFTING");
                	list.add(EnumChatFormatting.LIGHT_PURPLE + "1" + EnumChatFormatting.RESET + "x" + EnumChatFormatting.YELLOW + "Electromagnet");
                	list.add(EnumChatFormatting.LIGHT_PURPLE + "1" + EnumChatFormatting.RESET + "x" + EnumChatFormatting.YELLOW + "Glass");
            	}
	        }
	    }
	}
	
}
