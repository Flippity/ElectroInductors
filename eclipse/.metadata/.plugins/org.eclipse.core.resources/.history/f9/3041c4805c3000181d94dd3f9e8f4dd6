package com.flippity.ei.client.recipes;

import com.flippity.ei.common.blocks.BlockRegistry;
import com.flippity.ei.common.items.ItemRegistry;

import cpw.mods.fml.common.registry.GameRegistry;
import net.minecraft.item.ItemStack;

public class Recipes {
	public static void initRecipes() {
	GameRegistry.addRecipe(new ItemStack(BlockRegistry.blockAluminum),
			new Object[] { "bbb", "bbb", "bbb", 'b', ItemRegistry.aluminumIngot });
	GameRegistry.addRecipe(new ItemStack(BlockRegistry.blockCopper),
			new Object[] { "bbb", "bbb", "bbb", 'b', ItemRegistry.copperIngot });
	}
}
