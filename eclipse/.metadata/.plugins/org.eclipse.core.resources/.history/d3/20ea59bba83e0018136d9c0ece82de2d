			//machines
				//bore drills
		blockBoreDrillCrank = new BlockBoreDrillCrank();
		GameRegistry.registerBlock(blockBoreDrillCrank, "blockBoreDrillCrank");
				//coal generator
		/*blockCoalGenerator = new BlockCoalGenerator();
		GameRegistry.registerBlock(blockCoalGenerator, "blockCoalGenerator");*/
			//metals
		blockAluminum = new BlockAluminum();
		GameRegistry.registerBlock(blockAluminum, ItemBlockAluminum.class, "blockAluminum");
		oreAluminum = new OreAluminum();
		GameRegistry.registerBlock(oreAluminum, ItemOreAluminum.class, "oreAluminum");
		blockCopper = new BlockCopper();
		GameRegistry.registerBlock(blockCopper, ItemBlockCopper.class, "blockCopper");
		oreCopper = new OreCopper();
		GameRegistry.registerBlock(oreCopper, ItemOreCopper.class, "oreCopper");
		blockLead = new BlockLead();
		GameRegistry.registerBlock(blockLead, ItemBlockLead.class, "blockLead");
		oreLead = new OreLead();
		GameRegistry.registerBlock(oreLead, ItemOreLead.class, "oreLead");
			//batteries
		/*blockT1Battery = new BlockT1Battery();
		GameRegistry.registerBlock(blockT1Battery, ItemBlockT1Battery.class, "blockT1Battery");*/
			//farm
		blockGuayule = new BlockGuayule();
		GameRegistry.registerBlock(blockGuayule, "blockGuayule");
		
		
		//atomic
			//electromagnet
		blockElectromagnet = new BlockElectromagnet();
		GameRegistry.registerBlock(blockElectromagnet, ItemBlockElectromagnet.class, "blockElectromagnet");	
		blockElectromagnetGlass = new BlockElectromagnetGlass();
		GameRegistry.registerBlock(blockElectromagnetGlass, ItemBlockElectromagnet.class, "blockElectromagnetGlass");	
			//plasma
		blockPlasma = new BlockPlasma();
