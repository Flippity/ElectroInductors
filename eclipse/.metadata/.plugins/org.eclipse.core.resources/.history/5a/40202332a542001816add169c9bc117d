package com.flippity.ei.client.gui;


import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.entity.player.InventoryPlayer;
import net.minecraft.world.World;

import com.flippity.ei.common.tiles.atomic.TECentrifuge;

import cpw.mods.fml.common.network.IGuiHandler;

public class GuiHandler implements IGuiHandler {
private int x, y, z;  
private World world;
private InventoryPlayer inv;
@Override
    public Object getServerGuiElement(int ID, EntityPlayer player, World world, int x, int y, int z) {
        return null;
    }

    @Override
    public Object getClientGuiElement(int ID, EntityPlayer player, World world, int x, int y, int z) {
        this.x = x;
        this.y = y;
        this.z = z;
        this.world = world;
        inv = player.inventory;
        TECentrifuge gold = (TECentrifuge)world.getTileEntity(x, y, z);
    	if(ID == GUIs.SMELTER.ordinal()) return new GuiCentrifuge(inv, gold);
        else return null;
    }

}