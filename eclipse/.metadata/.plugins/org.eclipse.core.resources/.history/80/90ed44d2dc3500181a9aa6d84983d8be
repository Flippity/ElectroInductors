package com.flippity.ei.common.tiles.atomic;

import com.flippity.ei.common.blocks.atomic.BlockCentrifuge;

import net.minecraft.tileentity.TileEntity;

public class TECentrifuge extends TileEntity {
	
	public static boolean rotate = false;
	public static int yellowcakeCount = 0;
	public static boolean canfill = true;
	
	public int i = 0;
	
	@Override
	public void updateEntity() {
		i++;
		if(yellowcakeCount > 16) {
			yellowcakeCount = 16;
			canfill = false;
		}
		if(i == 600) {
			yellowcakeCount -= 1;
			i = 0;
		}
		System.out.println(i);
	}

}
