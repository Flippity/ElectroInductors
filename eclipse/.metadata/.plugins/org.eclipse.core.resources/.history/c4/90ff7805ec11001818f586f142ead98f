package com.flippity.ei.client.renderers.cogs;

import com.flippity.ei.client.models.cables.ModelCableCube;
import com.flippity.ei.client.models.cogs.ModelCog;
import com.flippity.ei.common.tiles.cogs.TECog;

import net.minecraft.client.renderer.tileentity.TileEntityRendererDispatcher;
import net.minecraft.item.ItemStack;
import net.minecraftforge.client.IItemRenderer;
import net.minecraftforge.client.IItemRenderer.ItemRenderType;
import net.minecraftforge.client.IItemRenderer.ItemRendererHelper;

public class ItemRendererCog implements IItemRenderer {

    private ModelCableCube modelCableCube;

    public ItemRendererCog() {
    	modelCableCube = new ModelCableCube();
    }

    @Override
    public boolean handleRenderType(ItemStack item, ItemRenderType type) {
        return true;
    }

    @Override
    public boolean shouldUseRenderHelper(ItemRenderType type, ItemStack item, ItemRendererHelper helper) {
        return true;
    }

    @Override
    public void renderItem(ItemRenderType type, ItemStack item, Object... data) {
        TileEntityRendererDispatcher.instance.renderTileEntityAt(new TECog(), 0.0D, 0.0D, 0.0D, 1.0f);
    }

}
